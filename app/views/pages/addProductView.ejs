<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <script></script>
</head>

<body>

    <div class="header">
        <% include ../partials/header %>
    </div>

    <% include ../partials/sidenav %>

    <div class="container login">
        <form method="POST" action="/products/add">
            <div class="text-center">
                <h1>Thêm nhanh san pham mới</h1>
              </div>
            <div class="form-group">
                <label for="usr">Name:</label>
                <input type="text" value="Wacth" class="form-control" name="product_name" id="id">
              </div>
              <div class="form-group">
                <label for="pwd">Price:</label>
                <input type="number" value="10" class="form-control" name="product_price" id="price">
              </div>
              <div class="form-group">
                <label for="pwd">Description:</label>
                <input type="text" value="Đồng hồ Siêu cấp!" class="form-control" name="product_description" id="description">
              </div>
              <div class="text-center">
                <button class="btn btn-primary" type="submit">Thêm</button>
                <a  class="btn btn-primary" href="/">Hủy</a>
              </div>
          </form>
    </div>

    <div class="footer">
        <% include ../partials/footer %>
    </div>

</body>

</html>